cabal-version: 2.2
name: fontconfig
version: 0
synopsis: Bindings for fontconfig
description: Bindings for fontconfig.
homepage: https://github.com/ekmett/codex/tree/master/fontconfig#readme
license: BSD-2-Clause OR Apache-2.0
license-file: LICENSE.md
author: Edward Kmett
maintainer: Edward Kmett <ekmett@gmail.com>
copyright: Copyright (c) 2019 Edward Kmett
stability: experimental
category: Graphics
build-type: Simple
extra-doc-files:
  README.md,
  CHANGELOG.md

source-repository head
  type: git
  location: https://github.com/ekmett/codex

common lib
  hs-source-dirs: src
  build-tool-depends: hsc2hs:hsc2hs
  default-language: Haskell2010
  pkgconfig-depends: fontconfig >= 2.11.91

  ghc-options:
    -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates
    -Wredundant-constraints -Widentities -Wmissing-export-lists

  build-depends:
    base >= 4.11 && < 5,
    const,
    containers >= 0.6,
    data-default,
    inline-c,
    StateVar,
    template-haskell,
    transformers

library raw
  import: lib
  hs-source-dirs: raw
  exposed-modules:
    Graphics.Fontconfig.Internal
    Graphics.Fontconfig.Private

library
  import: lib
  hs-source-dirs: src
  build-depends: raw
  reexported-modules:
    Graphics.Fontconfig.Internal,
    Graphics.Fontconfig.Private
  exposed-modules:
    Graphics.Fontconfig

test-suite tests
  type: exitcode-stdio-1.0
  default-language: Haskell2010
  hs-source-dirs: test
  main-is: Spec.hs
  build-depends:
    base >= 4.11 && < 5,
    fontconfig,
    containers >= 0.6,
    StateVar,
    transformers,
    hspec