cabal-version: 2.2
name: ftgl
version: 0
synopsis: Low-level wrappings around the 'freetype-gl' library
description:  Low-level wrappings around the 'freetype-gl' library
homepage: https://github.com/ekmett/ui#readme
license: BSD-2-Clause OR Apache-2.0
license-file: LICENSE.md
author: Edward Kmett
maintainer: Edward Kmett <ekmett@gmail.com>
copyright: Copyright (c) 2019 Edward Kmett
stability: experimental
category: Graphics
build-type: Simple
extra-doc-files:
  README.md,
  CHANGELOG.md

extra-source-files:
  freetype-gl/font-manager.h
  freetype-gl/markup.h
  freetype-gl/opengl.h
  freetype-gl/text-buffer.h
  freetype-gl/texture-atlas.h
  freetype-gl/texture-font.h
  freetype-gl/utf8-utils.h
  freetype-gl/vec234.h
  freetype-gl/vector.h
  freetype-gl/vertex-attribute.h
  freetype-gl/vertex-buffer.h

source-repository head
  type: git
  location: https://github.com/ekmett/ui

library
  include-dirs: freetype-gl
  cc-options: -g -Wall
  c-sources:
    freetype-gl/texture-atlas.c
    freetype-gl/texture-font.c
    freetype-gl/text-buffer.c
    freetype-gl/font-manager.c
    freetype-gl/distance-field.c
    freetype-gl/vector.c
    freetype-gl/utf8-utils.c
    freetype-gl/vertex-buffer.c
    freetype-gl/vertex-attribute.c
    freetype-gl/platform.c

    --freetype-gl/edtaa3func.c
  hs-source-dirs: src
  default-language: Haskell2010
  ghc-options:
    -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates
    -Wredundant-constraints -Widentities -Wmissing-export-lists
  build-tool-depends: hsc2hs:hsc2hs
  build-depends:
    base >= 4.11 && < 5,
    const,
    containers,
    inline-c,
    gl, 
    primitive,
    template-haskell

  exposed-modules:
    Font.Freetype.GL.Atlas
    Font.Freetype.GL.Types
