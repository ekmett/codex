cabal-version: 2.2
name: harfbuzz
version: 0
synopsis: Text shaping using harfbuzz
description: Text shaping using harfbuzz
homepage: https://github.com/ekmett/ui#readme
license: BSD-2-Clause OR Apache-2.0
license-file: LICENSE.md
author: Edward Kmett
maintainer: Edward Kmett <ekmett@gmail.com>
copyright: Copyright (c) 2019 Edward Kmett
stability: experimental
category: Graphics
build-type: Simple
extra-doc-files:
  README.md,
  CHANGELOG.md

source-repository head
  type: git
  location: https://github.com/ekmett/ui

flag freetype
  default: True
  manual: True

common base
  default-language: Haskell2010
  build-depends:
    base >= 4.11 && < 5,
    const,
    data-default,
  ghc-options:
    -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates
    -Wredundant-constraints -Widentities -Wmissing-export-lists

library
  import: base
  hs-source-dirs: src
  build-tool-depends: hsc2hs:hsc2hs
  pkgconfig-depends: harfbuzz
  extra-libraries: harfbuzz
  build-depends:
    bytestring,
    containers >= 0.6,
    inline-c,
    StateVar,
    template-haskell,
    transformers

  if flag(freetype)
    build-depends: freetype
    cpp-options: -DUSE_FREETYPE

  exposed-modules:
    Graphics.Harfbuzz
    Graphics.Harfbuzz.Internal

test-suite spec
  import: base
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  hs-source-dirs: test
  build-depends:
    harfbuzz,
    hspec,
    tasty,
    tasty-hspec
