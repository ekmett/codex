cabal-version: 2.2
name: harfbuzz
version: 0
synopsis: Text shaping using harfbuzz
description: Text shaping using harfbuzz
homepage: https://github.com/ekmett/ui#readme
license: BSD-2-Clause OR Apache-2.0
license-file: LICENSE.md
author: Edward Kmett
maintainer: Edward Kmett <ekmett@gmail.com>
copyright: Copyright (c) 2019 Edward Kmett
stability: experimental
category: Graphics
build-type: Simple
extra-doc-files:
  README.md,
  CHANGELOG.md

source-repository head
  type: git
  location: https://github.com/ekmett/ui

common base
  default-language: Haskell2010
  build-depends:
    base >= 4.11 && < 5,
    const,
    data-default,
  ghc-options:
    -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates
    -Wredundant-constraints -Widentities -Wmissing-export-lists

common lib
  import: base
  pkgconfig-depends: harfbuzz
  extra-libraries: harfbuzz
  build-depends:
    bytestring,
    containers >= 0.6,
    hashable,
    inline-c,
    StateVar,
    template-haskell,
    text,
    transformers

library raw
  import: lib
  hs-source-dirs: raw
  build-tool-depends: hsc2hs:hsc2hs
  exposed-modules: Graphics.Harfbuzz.Internal

library
  import: lib
  build-depends: raw
  hs-source-dirs: src
  exposed-modules: Graphics.Harfbuzz
  reexported-modules: Graphics.Harfbuzz.Internal

test-suite spec
  import: base
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  hs-source-dirs: test
  build-depends:
    harfbuzz,
    hspec,
    StateVar,
    tasty,
    tasty-hspec
